# Setup linux packages
# option_settings:
#   - option_name: BUNDLE_DISABLE_SHARED_GEMS
#     value: "1"
#   - option_name: BUNDLE_PATH
#     value: "vendor/bundle"

commands:
  01_home_dir:
    test: '[ ! -p /home/webapp ] && echo "webapp not exited"'
    command: 'sudo mkdir -p /home/webapp'

  02_grant_home_dir:
    test: '[ ! -p /home/webapp ] && echo "webapp not exited"'
    command: 'sudo chmod 777 /home/webapp'
